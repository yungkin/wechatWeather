/*swtich整体大小*/
.wx-switch-input{
width:82rpx !important;
height:45rpx !important;
background: #ccc !important;
border:#555 !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 41rpx !important;

}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
