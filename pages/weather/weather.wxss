.circleActived{
color: #fff;
font-size: 14px;
text-align: center;
width: 50rpx;
height: 50rpx;
margin: 6rpx 8px;
 border-radius:50%;
 background: linear-gradient(#ccc,#000);
}
.circleLost{
color: #fff;
font-size: 14px;
text-align: center;
width: 50rpx;
height: 50rpx;
 margin: 6rpx 8px;
 border-radius:50%;
 background: #ccc;
}

.weather{
  margin-top: 10px;
  border: 1px solid #ccc;
  border-radius: 10px;
  box-shadow:inset 0 0 12px #999;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.png{
  flex-grow: 2;
}
.image1{
  width: 42px;
  height: 30px;
  padding: 15px;
  border-right:1px solid blue;
}
.weatherInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10px;
  font-size: 14px;
  line-height: 20px;
  border-left: 1px solid #ccc;
  flex-grow: 1;
  color:#0900e0;
}

.details{
  width: 242px;
  font-size: 12px;
  border: 1px solid #ccc;
  border-radius: 10px;
  margin-top: 20px;
  box-shadow:inset 0 0 12px #999;
  background: #fff;
  padding:0 10px;
}
.weatherList{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
  color: #800080;
  margin: 4px 10px;
  }
.line{ width:100%;height: 2px; border: 1px solid #7070a5;}
.hide{
 display: none;
}
.show{ 
 display: block;
}
.exponent{
  color: #800080;
  width: 242px;
  border-bottom: 1px solid #7070a5;
  font-size: 12px;
  letter-spacing: 2px;
  margin: 10px;
}

