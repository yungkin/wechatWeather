.weather{
  width: 86%;
  margin-top: 32rpx;
  /* border: 1px solid #ccc; */
  border-radius: 20rpx;
  /* box-shadow:inset 0 0 24rpx #999;
  background: #fff; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.image1{
  width: 42px;
  height: 30px;
  padding: 15px;
  border-right:1px solid blue;
}
.weatherInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  /* border-left: 1px solid #ccc; */
  flex-grow: 1;
  color:#fff;
}
.weatherInfo>text:nth-child(1){
font-size:38rpx;
color: gold;
margin: 30rpx;
animation: changColor 6s;
}
@keyframes changColor
{
  0%{color:#6bddc4;}
  25%{color:#7e7bdd;}
  50%{color:#e7e96f;}
  100%{color:#0900e0;}
}

.details{
  width: 82%;
  font-size: 32rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin-top: 60rpx;
  /* box-shadow:inset 0 0 24rpx #999; */
  /* background: #fff; */
  padding:0 20rpx;
  transition: 2s;
}
.Todayweather text{
  margin-left:90rpx;
  /* color: #800080; */
  color: #fff;
  line-height: 52rpx;
   transition: 2s;
  }

.weatherList{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
  /* color: #800080; */
  color: #fff;
  margin: 10rpx 0;
   
  }
.line{ width:90%;height: 2rpx; border: 1px solid #7070a5;margin: 20rpx;}
.hide{
 display: none;
  transition: 2s;
}
.show{ 
 display: block;
   transition: 2s;
}
.exponent{
  /* color: #800080; */
  color: #fff;
  border-bottom: 1px solid #7070a5;
  font-size: 30rpx;
  letter-spacing: 4px;
  /* margin: 20rpx; */
  padding: 10rpx;
}
 .exponent .jiantou{
    margin-left: 30rpx;
  }
.tipt{
  font-size: 36rpx;
  color: gold;
  animation: tips 3s;
}
@keyframes tips
{
  0%{color:#0900e0;}
  25%{color:green;}
  50%{color:red;}
  100%{color:yellow;}
}

